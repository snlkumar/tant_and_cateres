<div class="col-md-10 col-md-offset-1 panel-default">
	<div class="panel panel-primary">
		<div class="panel-heading">New Order</div>
		<div class="panel-body">
			<%= form_for @order, :html => {:class => "form-horizontal center"} do |f| %>
			  <div class="control-group">
				<div class="col-md-3">
				  <%= f.text_field :name, placeholder: "Name",class: "form-control" %>
			    </div>
			  </div>
			  <div class="control-group">		
				<div class="col-md-3">
				  <%= f.text_field :phone, placeholder: "Mobile", class: "form-control" %>
			    </div>
			  </div>
			  <div class="form-group">
				<div class="col-md-3">
				  <%= f.text_field :address, placeholder: "Address", class: "form-control" %>
			    </div>
			  </div>
			  <hr>
			  <div class="form-actions">
				<%= f.submit 'Save',class: "btn btn-default btn-primary"  %>
			  </div>
			<% end %>
		</div>
  </div>	
</div>