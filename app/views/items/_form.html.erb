<div class="col-md-12 panel-default">
	<div class="panel panel-primary edit-list">
		<div class="panel-heading">Add/Edit Item</div>
		<div class="panel-body">
			<%= form_for @item, :html => {:class => "form-horizontal center"} do |f| %>
	  <div class="control-group">
		<div class="col-md-4">
		  <%= f.text_field :name, placeholder: "Name",class: "form-control" %>
	    </div>
	  </div>
	  <div class="control-group">		
		<div class="col-md-4">
		  <%= f.number_field :quantity, placeholder: "Quantity", class: "form-control" %>
	    </div>
	  </div>
	  <div class="form-group">
		<div class="col-md-4">
		  <%= f.number_field :charge, placeholder: "Charge/Day", class: "form-control" %>
	    </div>
	  </div>
	  <hr>
	  <div class="form-actions sv-btn">
		<%= f.submit 'Save',class: "btn btn-default btn-primary"  %>
	  </div>
	<% end %>
		</div>
  </div>	
</div>